{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node", // can use require AS import
    "esModuleInterop": true // fix default import: "import * as * from" -> "import * from"
  },
    "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}